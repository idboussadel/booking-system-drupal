{# templates/emails/verification-email.html.twig #}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Verification Code</title>
</head>
<body style="margin:0; padding:0; font-family: Arial, sans-serif; background-color: #f5f5f5;">
<!-- Email wrapper -->
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#f5f5f5">
  <tr>
    <td align="center" valign="top">
      <!-- Main content table -->
      <table width="600" border="0" cellspacing="0" cellpadding="0" style="background-color: #ffffff; border:1px solid #dddddd; border-radius:5px; margin:20px 0;">
        <tr>
          <td style="padding:25px;">
            <!-- Header -->
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td style="border-bottom:1px solid #dddddd; padding-bottom:15px; text-align:center;">
                  <h1 style="color:#333333; font-size:22px; margin:0;">Verification Code</h1>
                </td>
              </tr>
            </table>

            <!-- Content -->
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="color:#555555; font-size:16px; line-height:1.5; margin-top:20px;">
              <tr>
                <td>
                  <p>Hello,</p>
                  <p>You are editing an appointment. Please use the verification code below to proceed:</p>

                  <!-- OTP Code -->
                  <table width="100%" border="0" cellspacing="0" cellpadding="0" style="margin:20px 0;">
                    <tr>
                      <td align="center">
                        <div style="background-color:#f5f5f5; border:2px solid #5c5c5c; border-radius:10px; display:inline-block; padding: 10px 20px; text-align:center;">
                          <span style="color:#5c5c5c; font-size:24px; font-weight:bold;">
                            {{ code }}
                          </span>
                        </div>
                      </td>
                    </tr>
                  </table>

                  <p style="text-align:center; color:#888888;">
                    This code will expire in 15 minutes.
                  </p>

                  <p>If you did not request this change, please ignore this email or contact support.</p>
                </td>
              </tr>
            </table>

            <!-- Footer -->
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="border-top:1px solid #eeeeee; color:#888888; font-size:14px; margin-top:20px; padding-top:15px; text-align:center;">
              <tr>
                <td>
                  &copy; {{ "now"|date("Y") }} Void Booking System
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
</body>
</html>
