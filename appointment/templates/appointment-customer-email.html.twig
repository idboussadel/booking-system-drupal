{# templates/emails/appointment-customer-email.html.twig #}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{% trans %}Appointment Confirmation{% endtrans %}</title>
</head>
<body style="margin:0; padding:0; font-family: Arial, sans-serif; background-color: #f5f5f5;">
<!-- Email wrapper -->
<table width="100%" border="0" cellspacing="0" cellpadding="0" bgcolor="#f5f5f5">
  <tr>
    <td align="center" valign="top">
      <!-- Main content table -->
      <table width="600" border="0" cellspacing="0" cellpadding="0" style="background-color: #ffffff; border:1px solid #dddddd; border-radius:5px; margin:20px 0;">
        <tr>
          <td style="padding:25px;">
            <!-- Header -->
            <table width="100%" border="0" cellspacing="0" cellpadding="0">
              <tr>
                <td style="border-bottom:1px solid #eeeeee; padding-bottom:15px; text-align:center;">
                  <h1 style="color:#333333; font-size:22px; margin:0;">{% trans %}Appointment Confirmation{% endtrans %}</h1>
                </td>
              </tr>
            </table>

            <!-- Content -->
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="color:#555555; font-size:16px; line-height:1.5; margin-top:20px;">
              <tr>
                <td>
                  <p>{% trans with {'context': 'email'} %}Dear{% endtrans %} {{ params.first_name }} {{ params.last_name }},</p>
                  <p>{% trans %}This is a confirmation of your appointment scheduled for:{% endtrans %}</p>

                  <!-- Appointment details -->
                  <table width="100%" border="0" cellspacing="0" cellpadding="15" style="background-color:#f9f9f9; border:1px solid #eeeeee; border-radius:3px; margin:15px 0;">
                    <tr>
                      <td>
                        <p style="margin:5px 0;"><strong style="color:#333;">{% trans %}Date:{% endtrans %}</strong> {{ params.date }}</p>
                        <p style="margin:5px 0;"><strong style="color:#333;">{% trans %}Time:{% endtrans %}</strong> {{ params.start_time }} - {{ params.end_time }}</p>
                        <p style="margin:5px 0;"><strong style="color:#333;">{% trans %}Location:{% endtrans %}</strong> {{ params.agency_name }}, {{ params.agency_address }}</p>
                        <p style="margin:5px 0;"><strong style="color:#333;">{% trans %}Advisor:{% endtrans %}</strong> {{ params.advisor_name }}</p>
                        <p style="margin:5px 0;"><strong style="color:#333;">{% trans %}Appointment Type:{% endtrans %}</strong> {{ params.appointment_type }}</p>
                      </td>
                    </tr>
                  </table>

                  <p>{% trans %}Please arrive 10 minutes before your scheduled time.{% endtrans %}</p>
                  <p>{% trans %}If you need to cancel or reschedule, please contact us at least 24 hours in advance.{% endtrans %}</p>
                  <p>{% trans %}We look forward to seeing you!{% endtrans %}</p>
                  <p>{% trans %}Best regards,{% endtrans %}<br>{{ params.agency_name }}</p>
                </td>
              </tr>
            </table>

            <!-- Footer -->
            <table width="100%" border="0" cellspacing="0" cellpadding="0" style="border-top:1px solid #eeeeee; color:#888888; font-size:14px; margin-top:20px; padding-top:15px; text-align:center;">
              <tr>
                <td>
                  &copy; {{ "now"|date("Y") }} {{ params.agency_name }}
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>
</body>
</html>
